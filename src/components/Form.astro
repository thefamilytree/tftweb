<div class="form-row">
  <div class="form-area">
    <form name="contact" id="contactForm" action="/.netlify/functions/sendMail" method="POST">
      <h3>Enquiry for an appointment</h3>
      <input type="hidden" name="subject" value="New lead from Child and Adolescents page" />
      <input
        type="text"
        name="name"
        id="name"
        placeholder="Your Full Name"
        required
        class="full-length"
      />
      <input
        type="email"
        name="email"
        id="email"
        placeholder="Your Email Address"
        required
        class="full-length"
      />

      <fieldset>
        <div class="one-row">
          <div class="checkbox-container">
            <label class="checkbox"
              >Appointment
              <input type="checkbox" name="options[]" checked="checked" value="Appointment" />
              <span class="checkmark"></span>
            </label>
          </div>

          <div class="checkbox-container">
            <label class="checkbox"
              >Training/Seminar
              <input type="checkbox" name="options[]" value="Training/Seminar" />
              <span class="checkmark"></span>
            </label>
          </div>
        </div>

        <div class="checkbox-container">
          <label class="checkbox"
            >Supervision
            <input type="checkbox" name="options[]" value="Supervision" />
            <span class="checkmark"></span>
          </label>
        </div>
      </fieldset>

      <textarea name="message" id="message" cols="30" rows="6" placeholder="Your Message" required
      ></textarea>

      <!-- Honeypot (leave empty) -->
      <input type="text" name="website" class="hidden" autocomplete="off" tabindex="-1" />

      <button type="submit" class="btn-primary">Send Enquiry</button>
    </form>
  </div>
  <div class="img-area">
    <img src="/assets/appointments-new.jpeg" alt="" />
  </div>
</div>

